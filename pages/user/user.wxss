/* 用户页面样式 */
.user-info {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #1E90FF, #4169E1);
  padding: 40rpx 30rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 18px;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.login-tip {
  font-size: 14px;
  opacity: 0.8;
}

.menu-section {
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.menu-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.menu-list {
  /* 菜单列表容器 */
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
}

.favorite-icon {
  background: #FFF9E6;
}

.plan-icon {
  background: #E6F3FF;
}

.history-icon {
  background: #E6FFED;
}

.settings-icon,
.about-icon,
.feedback-icon {
  background: #F5F5F5;
}

.menu-text {
  flex: 1;
  font-size: 16px;
  color: #333;
}

.menu-arrow {
  display: flex;
  align-items: center;
}

.menu-badge {
  background: #ff4444;
  color: #fff;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  font-size: 12px;
  margin-right: 10rpx;
  min-width: 32rpx;
  text-align: center;
}

.version {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 14px;
}