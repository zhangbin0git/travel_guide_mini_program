/* 首页样式 */
.search-bar {
  position: relative;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.search-bar input {
  padding: 20rpx 60rpx 20rpx 20rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  font-size: 14px;
}

.search-icon {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

.banner {
  margin-bottom: 30rpx;
}

.banner-img {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title text {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.more {
  font-size: 14px;
  color: #1E90FF;
}

/* 热门目的地样式 */
.destination-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.destination-item {
  width: 48%;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.destination-img {
  width: 100%;
  height: 200rpx;
}

.destination-name {
  display: block;
  font-size: 16px;
  font-weight: bold;
  padding: 10rpx;
  color: #333;
}

.destination-desc {
  display: block;
  font-size: 12px;
  color: #666;
  padding: 0 10rpx 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 精选攻略样式 */
.guide-list {
  display: flex;
  flex-direction: column;
}

.guide-item {
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.guide-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.guide-img {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.guide-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.guide-title {
  font-size: 16px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.guide-time, .guide-author {
  font-size: 12px;
  color: #999;
  margin-top: 10rpx;
}

/* 标签样式 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 15rpx 30rpx;
  background: #f0f0f0;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 14px;
  color: #666;
}