/* 详情页样式 */
.top-images {
  margin-bottom: 20rpx;
}

.detail-img {
  width: 100%;
  height: 400rpx;
}

.basic-info {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.name-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.destination-name {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.favorite-btn {
  padding: 10rpx;
}

.meta {
  display: flex;
  margin-bottom: 20rpx;
}

.score, .travelers {
  font-size: 14px;
  color: #666;
  margin-right: 30rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.tag {
  padding: 4rpx 16rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  font-size: 12px;
  color: #666;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.description {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
}

.section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.content {
  font-size: 14px;
  color: #666;
  line-height: 1.8;
}

.content p {
  margin-bottom: 20rpx;
}

/* 必游景点样式 */
.attractions-list {
  display: flex;
  flex-direction: column;
}

.attraction-item {
  display: flex;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.attraction-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.attraction-img {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.attraction-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.attraction-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.attraction-desc {
  font-size: 14px;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}

.attraction-price {
  font-size: 14px;
  color: #ff4444;
  font-weight: bold;
}

/* 旅行建议样式 */
.travel-tips {
  display: flex;
  flex-direction: column;
}

.tip-item {
  display: flex;
  margin-bottom: 20rpx;
}

.tip-label {
  width: 100rpx;
  font-size: 14px;
  color: #999;
}

.tip-content {
  flex: 1;
  font-size: 14px;
  color: #666;
}

/* 底部按钮样式 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: #fff;
  padding: 20rpx;
  border-top: 1px solid #f0f0f0;
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  border-radius: 8rpx;
  font-size: 16px;
  padding: 20rpx 0;
}

.share-btn {
  background: #f0f0f0;
  color: #333;
}

.map-btn {
  background: #1E90FF;
  color: #fff;
}

.plan-btn {
  background: #ff4444;
  color: #fff;
}