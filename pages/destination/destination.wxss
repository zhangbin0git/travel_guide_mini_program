/* 目的地页面样式 */
.search-bar {
  position: relative;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.search-bar input {
  padding: 20rpx 60rpx 20rpx 20rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  font-size: 14px;
}

.search-icon {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

.filter-tags {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.filter-tags scroll-view {
  white-space: nowrap;
  padding-bottom: 10rpx;
}

.tag {
  display: inline-block;
  padding: 12rpx 30rpx;
  background: #f0f0f0;
  border-radius: 30rpx;
  margin-right: 20rpx;
  font-size: 14px;
  color: #666;
}

.tag.active {
  background: #1E90FF;
  color: #fff;
}

.destination-list {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
}

.destination-item {
  display: flex;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.destination-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.destination-img {
  width: 240rpx;
  height: 180rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.destination-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.destination-name {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.destination-desc {
  font-size: 14px;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}

.destination-meta {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #999;
  margin-bottom: 10rpx;
}

.destination-tags {
  display: flex;
  flex-wrap: wrap;
}

.small-tag {
  padding: 4rpx 16rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  font-size: 12px;
  color: #666;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-text {
  display: block;
  margin-top: 20rpx;
  font-size: 14px;
}